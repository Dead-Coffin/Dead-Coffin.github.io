.custom-block
  .custom-block-title
    font-weight 600
    margin-bottom -0.4rem
  &.tip, &.warning, &.danger
    padding .1rem 1.5rem
    border-left-width .5rem
    border-left-style solid
    margin 1rem 0
  &.tip
    background-color $tipBgColor
    border-color $tipBorderColor
  &.warning
    background-color $warningBgColor
    border-color darken($warningBorderColor, 5%)
    //color darken($warningBorderColor, 20%)
    .custom-block-title
      color darken($warningBorderColor, 5%)
    a
      color $accentColor
  &.danger
    background-color $dangerBgColor
    border-color darken($dangerBorderColor, 5%)
    //color darken($dangerBorderColor, 20%)
    .custom-block-title
      color darken($dangerBorderColor, 5%)
    a
      color $accentColor
  &.details
    display block
    position relative
    border-radius 2px
    margin 1.6em 0
    padding 1.6em
    background-color #eee
    h4
      margin-top 0
    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0
    summary
      outline none
      cursor pointer
